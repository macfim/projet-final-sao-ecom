# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=rootpassword
MONGO_HOST=mongodb-database
MONGO_PORT=27017

# MongoDB Connection URIs
MONGODB_USER_URI=mongodb://root:rootpassword@mongodb-database:27017/user?authSource=admin
MONGODB_PRODUCT_URI=mongodb://root:rootpassword@mongodb-database:27017/product?authSource=admin
MONGODB_ORDER_URI=mongodb://root:rootpassword@mongodb-database:27017/order?authSource=admin

# Service URLs (internal Docker network)
ORDER_SERVICE_URL=order-service:3003
PRODUCT_SERVICE_URL=product-service:3005
USER_SERVICE_URL=user-service:3004

# gRPC Proto File Paths
USER_PROTO_PATH=/app/user.proto
PRODUCT_PROTO_PATH=/app/product.proto
ORDER_PROTO_PATH=/app/order.proto

# Kafka Configuration
KAFKA_BROKER=kafka:9092
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092
KAFKA_LISTENERS=PLAINTEXT://0.0.0.0:9092
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_CREATE_TOPICS=order-events:1:1

# Email Configuration (for Notification Service)
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password
RECEIVER_EMAIL=recipient@example.com

# API Gateway Port
API_GATEWAY_PORT=3000

# Zookeeper Configuration
ALLOW_ANONYMOUS_LOGIN=yes
